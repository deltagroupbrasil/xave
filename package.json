{
  "name": "flerte-gamificado",
  "version": "1.0.0",
  "description": "App mobile gamificado para ensino de tÃ©cnicas de flerte com bot WhatsApp",
  "private": true,
  "workspaces": [
    "backend",
    "shared"
  ],
  "scripts": {
    "setup": "npm install && npm run setup:backend && npm run setup:mobile",
    "setup:backend": "cd backend && npm install",
    "setup:mobile": "cd mobile && flutter pub get",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:mobile\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:mobile": "cd mobile && flutter run",
    "build": "npm run build:backend && npm run build:mobile",
    "build:backend": "cd backend && npm run build",
    "build:mobile": "cd mobile && flutter build apk",
    "test": "npm run test:backend && npm run test:mobile",
    "test:backend": "cd backend && npm run test",
    "test:mobile": "cd mobile && flutter test",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "lint": "npm run lint:backend",
    "lint:backend": "cd backend && npm run lint",
    "format": "npm run format:backend && npm run format:mobile",
    "format:backend": "cd backend && npm run format",
    "format:mobile": "cd mobile && dart format ."
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "backend/**/*.{js,ts}": [
      "cd backend && npm run lint:fix",
      "cd backend && npm run format"
    ],
    "mobile/**/*.dart": [
      "cd mobile && dart format"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "flutter",
    "nodejs",
    "nestjs",
    "ai",
    "gamification",
    "whatsapp-bot",
    "dating-app",
    "social-skills"
  ],
  "author": "Flerte Gamificado Team",
  "license": "MIT"
}
