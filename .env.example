# =================================
# ENVIRONMENT CONFIGURATION
# =================================
NODE_ENV=development

# =================================
# DATABASE CONFIGURATION
# =================================
DATABASE_URL=postgresql://flerte_user:flerte_password_dev@localhost:5432/flerte_gamificado
POSTGRES_DB=flerte_gamificado
POSTGRES_USER=flerte_user
POSTGRES_PASSWORD=flerte_password_dev

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =================================
# MINIO/S3 STORAGE CONFIGURATION
# =================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=flerte_minio
MINIO_SECRET_KEY=flerte_minio_password
MINIO_BUCKET_NAME=flerte-media
MINIO_USE_SSL=false

# =================================
# JWT & SECURITY
# =================================
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRES_IN=30d

# =================================
# AI SERVICES
# =================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Whisper (Audio Transcription)
WHISPER_MODEL=whisper-1

# Computer Vision
VISION_MODEL=gpt-4-vision-preview

# =================================
# PAYMENT GATEWAYS
# =================================

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Pagar.me
PAGARME_API_KEY=ak_test_your_pagarme_api_key
PAGARME_ENCRYPTION_KEY=ek_test_your_encryption_key

# =================================
# WHATSAPP BUSINESS API
# =================================
WHATSAPP_TOKEN=your_whatsapp_business_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# =================================
# EMAIL SERVICES
# =================================
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=noreply@flertegamificado.com
SUPPORT_EMAIL=suporte@flertegamificado.com

# =================================
# FIREBASE (Push Notifications)
# =================================
FIREBASE_PROJECT_ID=flerte-gamificado
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@flerte-gamificado.iam.gserviceaccount.com

# =================================
# SOCIAL LOGIN
# =================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key

# =================================
# MONITORING & ANALYTICS
# =================================
MIXPANEL_TOKEN=your_mixpanel_token
SENTRY_DSN=your_sentry_dsn

# =================================
# RATE LIMITING
# =================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WHATSAPP_MAX=50

# =================================
# CONTENT MODERATION
# =================================
OPENAI_MODERATION_ENABLED=true
CUSTOM_MODERATION_ENABLED=true

# =================================
# DEVELOPMENT SETTINGS
# =================================
DEBUG_MODE=true
LOG_LEVEL=debug
ENABLE_SWAGGER=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =================================
# PRODUCTION OVERRIDES
# (Uncomment and modify for production)
# =================================
# NODE_ENV=production
# LOG_LEVEL=info
# DEBUG_MODE=false
# ENABLE_SWAGGER=false
